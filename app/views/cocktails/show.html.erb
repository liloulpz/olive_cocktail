<section>
  <p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
  </p>

  <p><strong>Doses:</strong></p>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.quantity %><%= dose.unity %></li>
    <%= link_to 'Destroy', cocktail_dose_path(@cocktail.id, dose), method: "delete", data: {confirm: "are you sure ?"} %>
  <% end %>
</ul>
</section>
